<li>
  <%= link_to user.name, user %>
  <% if current_user.try :admin? %>
    <%= form_for user do |f| %>
      <%= f.select(:role, User.roles.keys.map {|role| [role.titleize,role]})%>
      <%= f.submit t("button.role"), :class => "btn btn-xs btn-primary", style: "width: 50%" %>
    <% end %>
  <%= link_to t("button.delete"), user, method: :delete, 
              data: { confirm: "Are Your Sure?" } %>
  <% end %>
</li>